{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:*:*:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": "arn:aws:s3:::{{ project }}-{{ deployment_group }}-input/*"        },
        {
            "Effect": "Allow",
            "Action": [
                "kms:decrypt"
            ],
            "Resource": "arn:aws:kms:::key/aws/s3"
        }       
    ]
}
